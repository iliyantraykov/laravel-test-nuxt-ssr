{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "esnext",
            "esnext.asynciterable",
            "dom"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "strict": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "baseUrl": "./resources/nuxt",
        "paths": {
            "~/*": [
                "./*"
            ],
            "@/*": [
                "./*"
            ]
        },
        "types": [
            "@nuxt/types",
            "@nuxtjs/axios",
            "node",
            "jest",
            "vuetify"
        ]
    },
    "exclude": [
        "vendor",
        "node_modules",
        "resources/nuxt/static",
        "public"
    ]
}